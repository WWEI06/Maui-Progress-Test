<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            x:Class="MAD_PT_BCS23020015.MainPage"
             BackgroundColor="#1C1C1E">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20" 
            Padding="20,40,20,20">

            <Border Stroke="#FFD700"
                    StrokeThickness="3"
                    HeightRequest="150"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 75">
                <Image Source="vincent.jpg" 
                       Aspect="AspectFill"
                       HeightRequest="150"
                       WidthRequest="150" />
            </Border>

            <Label Text="Vincent van Gogh"
                   TextColor="White"
                   FontSize="28"
                   FontAttributes="Bold"
                   FontFamily="OpenSansSemibold"
                   HorizontalOptions="Center" />

            <Label Text="Dutch, 1853 - 1890"
                   TextColor="#AAAAAA"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,0" />

            <Label Text="Was a Dutch Post-Impressionist painter who is among the most famous and influential figures in the history of Western art."
                   TextColor="#DDDDDD"
                   HorizontalTextAlignment="Center"
                   FontSize="14" />

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="Read More"
                           TextColor="#FFD700"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           FontSize="14" />
                </toolkit:Expander.Header>

                <toolkit:Expander.Content>
                    <Label Text="In just over a decade, he created about 2,100 artworks, including around 860 oil paintings, most of them in the last two years of his life."
                           TextColor="#DDDDDD"
                           HorizontalTextAlignment="Center"
                           FontSize="14"
                           Margin="0,10,0,0"/>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <BoxView HeightRequest="1" Color="White" HorizontalOptions="Fill" />

            <Grid ColumnDefinitions="*,*,*,*" 
                  Margin="0,5,0,5">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="$7.5m" TextColor="White" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                    <Label Text="Record" TextColor="#AAAAAA" FontSize="12" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="$3.5m" TextColor="White" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                    <Label Text="Average" TextColor="#AAAAAA" FontSize="12" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2" Spacing="5">
                    <Label Text="+598%" TextColor="White" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                    <Label Text="General" TextColor="#AAAAAA" FontSize="12" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="3" Spacing="5">
                    <Label Text="12" TextColor="White" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                    <Label Text="Items" TextColor="#AAAAAA" FontSize="12" HorizontalOptions="Center"/>
                </VerticalStackLayout>

            </Grid>

            <BoxView HeightRequest="1" Color="White" HorizontalOptions="Fill" />

            <Label Text="Other Van Gogh Works"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />

            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnSpacing="15"
                  RowSpacing="20">

                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawone.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="Peach Tree in Blossom" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$950,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawtwo.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="Cafe Terrace at Night" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$1,920,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawthree.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="Starry Night" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$100,000,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawfour.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="Sunflowers" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$39,900,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Grid.Column="0" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawfive.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="Irises" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$53,900,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Grid.Column="1" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawsix.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="The Bedroom" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$20,000,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="3" Grid.Column="0" Spacing="5">
                    <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BorderColor="Transparent">
                        <Image Source="drawseven.jpeg" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
                    </Frame>
                    <Label Text="Self-Portrait" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                    <Label Text="$71,500,000" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>